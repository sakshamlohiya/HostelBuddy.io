    <h1 style="margin: 30px; color: antiquewhite; text-align: center;">Add Complaint Details</h1>
    
    <form class="addeventsf" action="/complaint" method="post">
        <div class="mb-3">
            <label for="cemail" class="form-label">Your official Email</label>
            <input type="email" class="form-control" id="cemail" name="cemail" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="csubject" class="form-label">Complaint Subject</label>
            <input type="text" class="form-control" id="csubject" name="csubject" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="cauthority" class="form-label">Concern Authorities(if any)</label>
            <input type="text" class="form-control" id="cauthority" name="cauthority" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="cdes" class="form-label">Complaint</label>
            <textarea name="cdes" id="cdes" class="form-control" cols="40" style="border-radius: 10px;" rows="10"></textarea>
        </div>
        <button type="submit" id="eventsadd" style="margin: 20px; background-color: #fff; color:rgb(30, 8, 107);"
        class="btn btn-primary">Submit</button>
    </form>

